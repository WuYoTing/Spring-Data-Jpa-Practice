root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 3

[*.json]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[.eslintrc]
indent_style = space
indent_size = 2

[{*.ddl,*.sql}]
indent_style = space
indent_size = 2

[*.{xml,java}]
indent_style = tab
indent_size = 3